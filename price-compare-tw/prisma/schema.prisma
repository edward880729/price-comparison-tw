generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WatchProduct {
  watchProductID Int            @id @default(autoincrement())
  website        String
  keyword        String
  minPrice       Int
  maxPrice       Int
  sleepTime      Int
  filter         Filter[]
  searchResult   SearchResult[]
  isValid        Boolean
  isNofication   Boolean
}

model SearchResult {
  searchResultID Int           @id @default(autoincrement())
  watchProductID Int
  watchProduct   WatchProduct? @relation(fields: [watchProductID], references: [watchProductID])
  name           String
  price          Int
  shopID         String
  itemID         String
  url            String
  imageUrl       String
  createDate     DateTime      @default(now())
}

model Filter {
  filterID       Int           @id @default(autoincrement())
  watchProductID Int
  watchProduct   WatchProduct? @relation(fields: [watchProductID], references: [watchProductID])
  type           String
  value          String
}
